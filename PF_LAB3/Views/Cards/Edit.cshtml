@model PF_LAB3.Models.Card

@{
    ViewData["Title"] = "Edit " + @Model.Name;
}

<h1 class="text-center" style="color:var(--gi-red);">EDIT CARD</h1>
<h4 class="text-center" style="color:var(--gi-gold);">@Model.Name</h4>

<hr style="border-top: 2px solid var(--gi-gold);">

<div class="row justify-content-center">
    <div class="col-md-6">
        <div class="card gi-card p-4">
            <form asp-action="Edit">
                <div asp-validation-summary="ModelOnly" class="text-danger"></div>

                <input type="hidden" asp-for="Id" />

                <div class="form-group mb-3">
                    <label asp-for="Name" class="control-label" style="color:var(--gi-gold);"></label>
                    <input asp-for="Name" class="form-control" />
                    <span asp-validation-for="Name" class="text-danger"></span>
                </div>

                <div class="form-group mb-3">
                    <label asp-for="Rarity" class="control-label" style="color:var(--gi-gold);"></label>
                    <input asp-for="Rarity" class="form-control" />
                    <span asp-validation-for="Rarity" class="text-danger"></span>
                </div>

                <div class="form-group mb-3">
                    <label asp-for="CharacterName" class="control-label" style="color:var(--gi-gold);"></label>
                    <input asp-for="CharacterName" class="form-control" />
                    <span asp-validation-for="CharacterName" class="text-danger"></span>
                </div>

                <div class="form-group mb-3">
                    <label asp-for="Type" class="control-label" style="color:var(--gi-gold);"></label>
                    <input asp-for="Type" class="form-control" />
                    <span asp-validation-for="Type" class="text-danger"></span>
                </div>

                <div class="form-group mb-3">
                    <label asp-for="Description" class="control-label" style="color:var(--gi-gold);"></label>
                    <textarea asp-for="Description" class="form-control"></textarea>
                    <span asp-validation-for="Description" class="text-danger"></span>
                </div>

                <div class="form-group mb-3">
                    <label asp-for="CharacterImageUrl" class="control-label" style="color:var(--gi-gold);"></label>
                    <input asp-for="CharacterImageUrl" class="form-control" />
                    <span asp-validation-for="CharacterImageUrl" class="text-danger"></span>
                </div>

                <div class="form-group text-center mt-4">
                    <input type="submit" value="Save Changes" class="btn btn-lg btn-danger gi-card" />
                    <a asp-action="Index" class="btn btn-outline-light ms-3">Cancel</a>
                </div>
            </form>
        </div>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}