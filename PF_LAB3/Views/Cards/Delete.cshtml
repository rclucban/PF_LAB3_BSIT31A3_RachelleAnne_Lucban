@model PF_LAB3.Models.Card

@{
    ViewData["Title"] = "Delete " + @Model.Name;
}

<h1 class="text-center" style="color:var(--gi-red);">DELETE CARD</h1>
<h3 class="text-center" style="color:var(--gi-gold);">Are you sure you want to delete this card?</h3>

<hr style="border-top: 2px solid var(--gi-red);">

<div class="row justify-content-center">
    <div class="col-md-6">
        <div class="card gi-card p-4 text-center">
            <img src="@Model.CharacterImageUrl" alt="@Model.CharacterName" class="img-fluid mb-3 mx-auto" style="max-height: 200px; object-fit: cover; border: 2px solid var(--gi-red);">

            <h4 style="color:var(--gi-gold);">@Html.DisplayFor(model => model.Name)</h4>
            <p class="text-muted">Rarity: @Html.DisplayFor(model => model.Rarity) | Type: @Html.DisplayFor(model => model.Type)</p>
            <p class="mt-2">@Html.DisplayFor(model => model.Description)</p>

            <form asp-action="Delete">
                <input type="hidden" asp-for="Id" />
                <div class="mt-4">
                    <input type="submit" value="Confirm Delete" class="btn btn-lg btn-danger gi-card" />
                    <a asp-action="Index" class="btn btn-outline-light ms-3">Cancel</a>
                </div>
            </form>
        </div>
    </div>
</div>